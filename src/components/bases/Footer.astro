---
import { HStack, styled as s } from "styled-system/jsx";
---

<s.footer
  mx="auto"
  my="10"
  pt="4"
  px="auto"
  width="80%"
  borderTopWidth="1"
  borderTopColor="sz.border"
  pt="4"
>
  <HStack
    justifyContent="space-between"
    alignItems="center"
    fontSize="sm"
  >
    <s.span color="sz.text.sub" visibility="hidden" aria-hidden="true">
      Privacy Policy
    </s.span>
    <s.span color="sz.text.sub">
      Copyright Â© 2025 suzuuuuu09 All Rights Reserved.
    </s.span>
    <s.a href="/privacy-policy" color="sz.text.sub" _hover={{ color: "sz.text.main", textDecoration: "underline" }}>
      Privacy Policy
    </s.a>
  </HStack>
</s.footer>
