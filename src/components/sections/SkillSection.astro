---
import { styled as s } from "styled-system/jsx";
import { SectionLayout } from "@/components/shared/SectionLayout";
import SectionTitle from "@/components/shared/SectionTitle.astro";
import IconCard from "@/components/shared/IconCard.astro";
import { SkillGrid } from "@/components/features/skill/SkillGrid";

const programmingLanguages = [
  "python",
  "html",
  "css",
  "javascript",
  "typescript",
  "c",
  "cpp",
  "csharp",
  "lua",
];

const frameworksAndLibraries = [
  "fastapi",
  "pandas",
  "opencv",
  "django",
  "flask",
  "ffmpeg",
  "mediapipe",
  "selenium",
  "flutter",
  "leaflet",
  "astro",
  "svelte",
  "vue",
  "nuxt",
  "bun",
  "nodejs",
  "gsap",
  "hono",
  "expressjs",
  "tailwind",
  "unocss",
  "pandacss",
  "vite",
  "vuetify",
  "mantine",
];

const toolAndOthers = [
  "git",
  "github",
  "githubactions",
  "vscode",
  "visualstudio",
  "neovim",
  "vim",
  "jupyter",
  "obsidian",
  "unity",
  "vercel",
  "cloudflarepages",
];
---

<SectionLayout>
  <SectionTitle>Skills</SectionTitle>
  <s.h2 mb="4" fontWeight="bold" fontSize="2xl" color="sz.text.main"
    >プログラミング言語</s.h2
  >
  <SkillGrid>
    {programmingLanguages.map((lang) => <IconCard iconKey={lang} />)}
  </SkillGrid>

  <s.h2 mb="4" fontWeight="bold" fontSize="2xl" color="sz.text.main"
    >フレームワーク・ライブラリ</s.h2
  >
  <SkillGrid>
    {frameworksAndLibraries.map((fw) => <IconCard iconKey={fw} />)}
  </SkillGrid>

  <s.h2 mb="4" fontWeight="bold" fontSize="2xl" color="sz.text.main"
    >ツール・その他</s.h2
  >
  <SkillGrid>
    {toolAndOthers.map((tool) => <IconCard iconKey={tool} />)}
  </SkillGrid>
</SectionLayout>
