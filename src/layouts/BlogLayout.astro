---
import "@mantine/core/styles.css";
import "@/styles/global.css";
import "katex/dist/katex.min.css"; // KaTeXのスタイル
import { css } from "styled-system/css";
import { SITE_TITLE, SITE_DESCRIPTION, GA_TRACKING_ID } from "@/consts/base";
import Header from "@/components/bases/Header.astro";
import Footer from "@/components/bases/Footer.astro";
import FloatingBackground from "@/components/bases/FloatingBackground";
import { ContentContainer } from "@/components/shared/ContentContainer";
import { Expand } from "@/components/shared/Expand";
import GoogleAnalytics from "@/components/features/ga/GoogleAnalytics.astro";

interface Props {
  title: string;
  headings: {
    depth: number;
    slug: string;
    text: string;
  }[];
  frontmatter?: {
    title: string;
    slug: string;
    publishDate?: string | Date;
    updateDate?: string | Date;
    tags?: string[];
    emoji?: string;
    description?: string;
  };
  collection?: string;
}

const { title, headings = [], frontmatter, collection = "blog" } = Astro.props;
const siteTitle = `${frontmatter?.title || title} - ${SITE_TITLE}`;
const description = frontmatter?.description || SITE_DESCRIPTION;
// OG画像URL生成
const ogImageUrl = new URL(
  `/api/og/${collection}/${frontmatter?.slug || headings[0]?.slug || title}.png`,
  Astro.site,
);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
    <meta name="description" content={description} />

    <!-- Dark mode initialization script -->
    <script is:inline>
      const theme =
        localStorage.getItem("theme") ||
        (window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light");
      document.documentElement.setAttribute("data-theme", theme);
    </script>

    <script
      is:inline
      async
      src="https://platform.twitter.com/widgets.js"
      charset="utf-8"></script>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={frontmatter?.title || title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl.toString()} />
    <meta property="og:site_name" content={SITE_TITLE} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={frontmatter?.title || title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageUrl.toString()} />

    <GoogleAnalytics id={GA_TRACKING_ID} />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://content.suzuuuuu09.com" />
    <link rel="preconnect" href="https://twemoji.maxcdn.com" />

    <!-- フォントのプレロード -->
    <link
      rel="preload"
      href="/fonts/IBMPlexSansJP-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/IBMPlexSansJP-Bold.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/MoralerspaceNeon-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
  </head>
  <body class={css({ bg: "sz.bg", minH: "100vh", position: "relative" })}>
    <FloatingBackground client:load />
    <Header />

    <ContentContainer maxW="6xl">
      <Expand>
        <slot />
      </Expand>
    </ContentContainer>

    <Footer />

    <script>
      import { initTwemoji } from "@/lib/twemoji";

      document.addEventListener("DOMContentLoaded", initTwemoji);
      document.addEventListener("astro:page-load", initTwemoji);
    </script>
  </body>
</html>
