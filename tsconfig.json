{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src",
    "styled-system"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./public/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "path-autocomplete.pathMappings": {
    "@": "${folder}/src",
    "~": "${folder}/public",
    "styled-system/*": "styled-system/*"
  }
}
